<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music_bg">
    <Button
        android:id="@+id/but1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/music_icon"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/but2"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_below="@+id/but1"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/progress_icon" />

    <Button
        android:id="@+id/but3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/but2"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/middle_icon" />
    <Button
        android:id="@+id/Bleft"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/but2"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/but3"
        android:background="@drawable/left_icon"/>

    <Button
        android:id="@+id/Bright"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/but2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/but3"
        android:background="@drawable/right_icon"/>

</RelativeLayout>